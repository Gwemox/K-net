<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thibault01.k_net"
    android:versionCode="6"
    android:versionName="1.1.3" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.thibault01.k_net.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.thibault01.k_net.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.thibault01.k_net.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.thibault01.k_net.InfosActivity"
            android:label="@string/title_activity_infos" >
        </activity>
        <activity
            android:name="com.thibault01.k_net.WolActivity"
            android:label="@string/title_activity_wol" >
        </activity>
        <activity
            android:name="com.thibault01.k_net.ToolsActivity"
            android:label="@string/title_activity_tools"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.thibault01.k_net.TvActivity"
            android:label="@string/title_activity_tv" >
        </activity>
        <activity
            android:name="com.thibault01.k_net.KnetMainActivity"
            android:label="@string/title_activity_knet_main" >
        </activity>
    </application>

</manifest>
